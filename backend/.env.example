# Application
APP_NAME="CodeView Backend"
DEBUG=true

# Database
# For local development (SQLite):
DATABASE_URL="sqlite:///./codeview.db"

# For production with PostgreSQL (Render will provide this automatically):
# DATABASE_URL="postgresql://user:password@host:port/database"

# Security (generate with: openssl rand -hex 32)
SECRET_KEY="your-secret-key-here-change-in-production-generate-with-openssl-rand-hex-32"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS
CORS_ORIGINS='["http://localhost:8080", "http://127.0.0.1:8080"]'
